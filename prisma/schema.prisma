// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  purchases             Purchase[]
  progress              UserProgress[]
  workbookProgress      WorkbookProgress[]
  workbookVideoProgress WorkbookVideoProgress[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@map("password_reset_tokens")
}

// Products and Programs
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Int      // Price in cents
  type        ProductType
  featured    Boolean  @default(false)
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  purchases   Purchase[]
  videos      Video[]
  workbooks   Workbook[]
  printables  Printable[]

  // Stripe Price IDs - Live mode
  priceId            String?  // Stripe Live Price ID (one-time)
  paymentPlanPriceId String?  // Stripe Live Price ID (subscription/payment plan)

  // Stripe Price IDs - Test mode
  testPriceId            String?  // Stripe Test Price ID (one-time)
  testPaymentPlanPriceId String?  // Stripe Test Price ID (subscription/payment plan)

  @@map("products")
}

enum ProductType {
  FREE_WORKSHOP
  PAID_PROGRAM
  DIGITAL_PRODUCT
  FREE_RESOURCE
}

// Purchase tracking
model Purchase {
  id                String   @id @default(cuid())
  userId            String
  productId         String
  stripePaymentId   String?  @unique
  stripeCustomerId  String?
  stripeSubscriptionId String? // For payment plans
  amount            Int      // Amount paid in cents
  status            PurchaseStatus @default(PENDING)
  paymentType       PaymentType? // "full" or "plan"
  planComplete      Boolean  @default(false) // For payment plans, true when all payments made
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("purchases")
}

enum PaymentType {
  FULL
  PLAN
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// Video content
model Video {
  id          String   @id @default(cuid())
  productId   String
  title       String
  description String?
  url         String   // URL to video file (S3 or Railway volume)
  thumbnailUrl String?
  duration    Int?     // Duration in seconds
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product  Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  progress UserProgress[]

  @@map("videos")
}

// User video progress tracking
model UserProgress {
  id             String   @id @default(cuid())
  userId         String
  videoId        String
  progressPercent Int     @default(0) // 0-100
  completed      Boolean  @default(false)
  lastWatchedAt  DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
  @@map("user_progress")
}

// Workbooks and resources
model Workbook {
  id            String   @id @default(cuid())
  productId     String
  slug          String   @unique
  title         String
  description   String?
  fileUrl       String?  // URL to PDF file (legacy)
  s3FolderPath  String?  // S3 folder path for image-based workbooks
  totalPages    Int?     // Number of pages in the workbook
  weekNumber    Int?     // For programs with weekly workbooks (1-9)
  bonusOnly     Boolean  @default(false) // True for bonus workbooks
  orderIndex    Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product  Product            @relation(fields: [productId], references: [id], onDelete: Cascade)
  progress WorkbookProgress[]
  videos   WorkbookVideo[]

  @@map("workbooks")
}

// Videos embedded within workbooks
model WorkbookVideo {
  id          String   @id @default(cuid())
  workbookId  String
  title       String
  description String?
  s3Key       String   // S3 path to video file
  thumbnailUrl String?
  duration    Int?     // Duration in seconds
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workbook Workbook                 @relation(fields: [workbookId], references: [id], onDelete: Cascade)
  progress WorkbookVideoProgress[]

  @@unique([workbookId, s3Key])
  @@map("workbook_videos")
}

// Progress tracking for workbook videos
model WorkbookVideoProgress {
  id              String   @id @default(cuid())
  userId          String
  workbookVideoId String
  progressPercent Int      @default(0) // 0-100
  completed       Boolean  @default(false)
  lastWatchedAt   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  workbookVideo WorkbookVideo @relation(fields: [workbookVideoId], references: [id], onDelete: Cascade)

  @@unique([userId, workbookVideoId])
  @@map("workbook_video_progress")
}

// Workbook progress tracking
model WorkbookProgress {
  id             String   @id @default(cuid())
  userId         String
  workbookId     String
  lastViewedPage Int      @default(1)
  completed      Boolean  @default(false)
  lastViewedAt   DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workbook Workbook @relation(fields: [workbookId], references: [id], onDelete: Cascade)

  @@unique([userId, workbookId])
  @@map("workbook_progress")
}

// Email delivery tracking for workbooks
model EmailDelivery {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  workbookId  String?
  emailType   EmailType
  sentAt      DateTime?
  scheduledFor DateTime?
  status      EmailStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("email_deliveries")
}

enum EmailType {
  WELCOME
  PURCHASE_CONFIRMATION
  WORKBOOK_DELIVERY
  PASSWORD_RESET
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
}

// Printable PDF resources
model Printable {
  id          String   @id @default(cuid())
  productId   String
  title       String
  description String
  s3Key       String   // S3 path to the PDF file
  orderIndex  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, s3Key])
  @@map("printables")
}
