# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Stripe Mode - Set to 'test' for test mode, 'live' for live mode
STRIPE_MODE="test"

# Stripe API Keys - Live Mode
STRIPE_LIVE_SECRET_KEY="sk_live_..."
STRIPE_LIVE_PUBLISHABLE_KEY="pk_live_..."

# Stripe API Keys - Test Mode
STRIPE_TEST_SECRET_KEY="sk_test_..."
STRIPE_TEST_PUBLISHABLE_KEY="pk_test_..."

# Stripe Webhook Secret (use the same for both modes, or create separate webhooks)
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs - Live Mode (create these in Stripe Dashboard under live mode)
STRIPE_LIVE_PRICE_ID_OFB_ONE_TIME="price_xxx"  # Optimal Fertility Blueprint - one-time
STRIPE_LIVE_PRICE_ID_OFB_PLAN="price_yyy"      # Optimal Fertility Blueprint - payment plan
STRIPE_LIVE_PRICE_ID_SFG="price_zzz"           # Stress Free Goddess - one-time
STRIPE_LIVE_PRICE_ID_FFY="price_aaa"           # Fearlessly Fertile Yoga - one-time

# Stripe Price IDs - Test Mode (create these in Stripe Dashboard under test mode)
STRIPE_TEST_PRICE_ID_OFB_ONE_TIME="price_test_xxx"  # Optimal Fertility Blueprint - one-time
STRIPE_TEST_PRICE_ID_OFB_PLAN="price_test_yyy"      # Optimal Fertility Blueprint - payment plan
STRIPE_TEST_PRICE_ID_SFG="price_test_zzz"           # Stress Free Goddess - one-time
STRIPE_TEST_PRICE_ID_FFY="price_test_aaa"           # Fearlessly Fertile Yoga - one-time

# Brevo (for transactional emails)
BREVO_API_KEY="your-brevo-api-key"
BREVO_FROM_EMAIL="noreply@yourdomain.com"
BREVO_FROM_NAME="Your Company Name"

# AWS S3 (for video storage)
# Required for video delivery - videos are stored in S3 and served via signed URLs
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"  # e.g., us-east-1, us-west-2
AWS_S3_BUCKET="your-bucket-name"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
